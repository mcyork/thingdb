# Flask Inventory System - Production Configuration
# Copy this file to app.env and customize as needed

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=0
SECRET_KEY=your-secret-key-here

# Database Configuration
# Option 1: Use internal PostgreSQL (default)
# Leave the EXTERNAL_POSTGRES_* variables commented out

# Option 2: Use external PostgreSQL
# Uncomment and configure these to use an external database:
# EXTERNAL_POSTGRES_HOST=your-postgres-host.com
# EXTERNAL_POSTGRES_PORT=5432
# EXTERNAL_POSTGRES_USER=your_db_user
# EXTERNAL_POSTGRES_PASSWORD=your_db_password
# EXTERNAL_POSTGRES_DB=your_db_name

# Application Settings
APP_NAME="Flask Inventory System"
APP_VERSION="2.0.0"
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,webp

# Security Settings
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# Performance Settings
CACHE_MAX_ITEMS=200
CACHE_TTL_SECONDS=1800
THUMBNAIL_SIZE=200
PREVIEW_SIZE=800

# Semantic Search Settings
SEMANTIC_SEARCH_ENABLED=true
SEMANTIC_SEARCH_MODEL=all-MiniLM-L6-v2
SEMANTIC_SEARCH_THRESHOLD=0.15

# Optional: S3 Storage (for future use)
# S3_BUCKET=
# S3_ACCESS_KEY=
# S3_SECRET_KEY=
# S3_REGION=