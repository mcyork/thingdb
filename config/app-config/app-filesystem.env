# Flask Inventory System - Filesystem Image Storage Configuration
# This configuration stores images on the filesystem instead of in the database

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=0
SECRET_KEY=filesystem-storage-secret-key-change-in-production

# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=inventory
POSTGRES_PASSWORD=inventory_filesystem_pass
POSTGRES_DB=inventory_filesystem

# Image Storage Configuration
IMAGE_STORAGE_METHOD=filesystem
IMAGE_DIR=/var/lib/inventory/images
SERVE_IMAGES_FROM_FILES=true

# Application Settings
APP_NAME="Flask Inventory System - Filesystem Storage"
APP_VERSION="2.0.0"
MAX_UPLOAD_SIZE=16777216  # 16MB in bytes
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,webp

# Security Settings
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# Performance Settings
CACHE_MAX_ITEMS=200
CACHE_TTL_SECONDS=1800
THUMBNAIL_SIZE=200
PREVIEW_SIZE=800

# Semantic Search Settings
SEMANTIC_SEARCH_ENABLED=true
SEMANTIC_SEARCH_MODEL=all-MiniLM-L6-v2
SEMANTIC_SEARCH_THRESHOLD=0.15

# ML Model Cache
TRANSFORMERS_CACHE=/app/ml_cache
HF_HOME=/app/ml_cache
