# Raspberry Pi Environment Configuration
FLASK_ENV=production
FLASK_DEBUG=0

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=inventory
POSTGRES_PASSWORD=inventory_pi_2024
POSTGRES_DB=inventory_db

# Pi-specific settings
DEPLOYMENT_TYPE=raspberry_pi
SERVE_IMAGES_FROM_FILES=true

# Image storage configuration (matching main config.py)
IMAGE_STORAGE_METHOD=filesystem
IMAGE_DIR=/var/lib/inventory/images

# Legacy Pi-specific image path (for backward compatibility)
IMAGE_FILE_PATH=/var/lib/inventory/images

# SSL Configuration
SSL_ENABLED=true
SSL_CERT_PATH=/var/lib/inventory/ssl/cert.pem
SSL_KEY_PATH=/var/lib/inventory/ssl/private.key

# Application Settings
SECRET_KEY=pi_inventory_secret_change_in_production_2024
MAX_CONTENT_LENGTH=16777216

# Performance Settings (Pi optimized)
WORKERS=2
WORKER_CONNECTIONS=50
TIMEOUT=60

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/lib/inventory/logs/app.log